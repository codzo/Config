{
    "name": "codzo/config",
    "type": "library",
    "description": "Configuration handler",
    "keywords": ["config", "setting"],
    "homepage": "https://github.com/codzo/Config",
    "license": "Apache-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Neil Fan",
            "email": "neil.fan@codzo.com",
            "homepage": "http://codzo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "codzo/phpcodesniffer-git-hook": "*"
    },
    "autoload": {
        "psr-0": {
            "Codzo\\Config": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf .git/hooks",
            "ln -s ../vendor/codzo/phpcodesniffer-git-hook/hooks .git/hooks"
        ]
    }
}
